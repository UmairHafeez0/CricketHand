<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_50"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Header Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Tournament Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_trophy"
                        app:tint="@color/gold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="ðŸ CricStat Pro"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_stats_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_purple_rounded"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="Live"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/purple_100"
                    android:layout_marginVertical="8dp" />

                <!-- Summary Stats -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <!-- Teams Stat -->
                    <LinearLayout
                        android:id="@+id/stat_teams"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/stat_players"
                        app:layout_constraintWidth_percent="0.33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ†"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_teams_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teams"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600" />
                    </LinearLayout>

                    <!-- Players Stat -->
                    <LinearLayout
                        android:id="@+id/stat_players"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintStart_toEndOf="@id/stat_teams"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/stat_matches"
                        app:layout_constraintWidth_percent="0.33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¤"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_players_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Players"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600" />
                    </LinearLayout>

                    <!-- Matches Stat -->
                    <LinearLayout
                        android:id="@+id/stat_matches"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintStart_toEndOf="@id/stat_players"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_percent="0.33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_matches_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matches"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Quick Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/tv_top_batsman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ Top Batsman: Loading..."
                        android:textSize="13sp"
                        android:textColor="@color/gray_700"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_bat"
                        android:paddingVertical="4dp" />

                    <TextView
                        android:id="@+id/tv_top_bowler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Top Bowler: Loading..."
                        android:textSize="13sp"
                        android:textColor="@color/gray_700"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_ball"
                        android:paddingVertical="4dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Categories Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ˆ Statistics Categories"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_800"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:fontFamily="sans-serif-medium" />

        <!-- RecyclerView for Categories -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:clipToPadding="false" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_empty_stats"
                app:tint="@color/gray_300" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Stats Available"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray_600"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Import match files to see statistics"
                android:textSize="14sp"
                android:textColor="@color/gray_500"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Import Files"
                android:layout_marginTop="24dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="1dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>